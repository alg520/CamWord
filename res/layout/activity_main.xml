<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:contentDescription="@string/app_name"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="team7663.project.camword.MainActivity" >

    <ImageButton
        android:id="@+id/settings"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/settings"
        android:contentDescription="@string/app_name" />

    <ImageButton
        android:id="@+id/ocr"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ocr"
        android:contentDescription="@string/app_name" />

    <ImageButton
        android:id="@+id/speech"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/ocr"
        android:layout_alignStart="@+id/ocr"
        android:layout_centerVertical="true"
        android:background="@drawable/speech"
        android:contentDescription="@string/app_name" />

    <ImageButton
        android:id="@+id/spell"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/settings"
        android:layout_alignLeft="@+id/speech"
        android:layout_alignStart="@+id/speech"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/spell"
        android:contentDescription="@string/app_name" />

</RelativeLayout>